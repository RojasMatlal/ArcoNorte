

{
  "extends": ["react-app"],
  "rules": {
    "react/jsx-uses-vars": "warn",
    "react/jsx-uses-react": "warn",
    "react-hooks/exhaustive-deps": "off",
    "react/react-in-jsx-scope": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}